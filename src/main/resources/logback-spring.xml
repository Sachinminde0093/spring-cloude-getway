<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Log directory -->
    <property name="LOG_PATH" value="./logs"/>

    <!-- ========================= -->
    <!-- Rolling File Appender -->
    <!-- ========================= -->
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- Current active file -->
        <file>${LOG_PATH}/gateway.log</file>

        <!-- Roll by size + time and ZIP old logs -->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- Zipped archive files -->
            <fileNamePattern>
                ${LOG_PATH}/gateway-%d{yyyy-MM-dd}.%i.log.gz
            </fileNamePattern>

            <!-- Roll file after this size -->
            <maxFileSize>50MB</maxFileSize>

            <!-- IMPORTANT -->
            <!-- ❌ NO maxHistory -->
            <!-- ❌ NO totalSizeCap -->
            <!-- This means logs are NEVER deleted -->

        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>

    </appender>

    <!-- ========================= -->
    <!-- Application Logs -->
    <!-- ========================= -->
    <logger name="com.example.demo" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Spring Cloud Gateway MVC -->
    <logger name="org.springframework.cloud.gateway.server.mvc" level="INFO"/>
    <logger name="org.springframework.web.servlet.function" level="INFO"/>

    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
